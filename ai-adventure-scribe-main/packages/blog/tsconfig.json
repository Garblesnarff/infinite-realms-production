{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping - Maps old paths to new workspace locations */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/ui/*": ["../shared-ui/src/components/*"],
      "@/lib/*": ["../shared-ui/src/lib/*", "./src/lib/*"],
      "@/integrations/supabase/*": ["../shared-utils/src/*"],
      "@/utils/*": ["../shared-utils/src/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/types/*": ["./src/types/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/components/*": ["./src/components/*"]
    }
  },
  "include": ["src"],
  "references": []
}
