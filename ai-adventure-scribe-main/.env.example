# Frontend Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# ==============================================================================
# REQUIRED: Core Services
# ==============================================================================

# WorkOS AuthKit Configuration (REQUIRED)
# Get these from your WorkOS dashboard: https://dashboard.workos.com/
VITE_WORKOS_CLIENT_ID=your_workos_client_id
VITE_WORKOS_REDIRECT_URI=https://yourdomain.com/auth/callback

# Supabase Configuration (REQUIRED for database/storage)
# Note: Supabase is used for database and storage only. Authentication is handled by WorkOS.
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Service Keys (REQUIRED)
# Gemini API key for AI functionality - can add multiple comma-separated for rotation
# Get from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEYS=your_gemini_api_key_here

# Single key for Edge Functions (Supabase environment)
VITE_GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================================================
# OPTIONAL: Analytics & Monitoring
# ==============================================================================

# Google Analytics (OPTIONAL)
# GA4 Measurement ID for analytics tracking (format: G-XXXXXXXXXX)
# Get from: https://analytics.google.com/
# Leave blank to disable analytics
VITE_GA_MEASUREMENT_ID=

# ==============================================================================
# API Configuration
# ==============================================================================

VITE_API_URL=http://localhost:4000
VITE_ENVIRONMENT=development
VITE_ENABLE_SPELL_API=false
# VITE_SPELL_API_URL=http://localhost:8888

# ==============================================================================
# Development & Testing
# ==============================================================================

# Development Test Account (for development only)
VITE_DEV_TEST_EMAIL=test@example.com
VITE_DEV_TEST_PASSWORD=testpass123

# Required for seeding test data (get from Supabase Project Settings > API)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==============================================================================
# OPTIONAL: Additional AI Services
# ==============================================================================

# OpenAI API (OPTIONAL)
# VITE_OPENAI_API_KEY=your_openai_key_here

# ElevenLabs API for text-to-speech (OPTIONAL)
VITE_ELEVENLABS_API_KEY=your_elevenlabs_key_here

# OpenRouter API for image generation (Gemini 2.5 Flash Image) (OPTIONAL)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==============================================================================
# OPTIONAL: Feature Toggles
# ==============================================================================

# Safety system toggle (defaults to false; enable only if you want in-app safety guardrails)
VITE_ENABLE_SAFETY_GUARDS=false

# Optional subsystems (disabled by default)
VITE_ENABLE_SEMANTIC_MEMORIES=false
VITE_ENABLE_WORLD_BUILDER=false

# ==============================================================================
# EXPERIMENTAL: LangGraph Migration
# ==============================================================================

# LangGraph AI System Toggle (EXPERIMENTAL - defaults to false)
# When enabled, uses the new LangGraph-based agent system instead of custom messaging
# This is a gradual migration feature flag - keep disabled unless testing
# Set to 'true' to enable LangGraph for AI interactions
VITE_FEATURE_USE_LANGGRAPH=false

# ==============================================================================
# Game Configuration
# ==============================================================================

# Combat settings
VITE_ENABLE_COMBAT_DM_NARRATION=false
VITE_COMBAT_SHEET_OVERLAY=dark

# ==============================================================================
# Blog / Marketing Site
# ==============================================================================

# Site URL for sitemap and RSS feed generation (REQUIRED for blog CMS)
# Use localhost for development, update to production domain for deployment
# Examples:
#   Development: http://localhost:3000
#   Production:  https://infinite-realms.ai
SITE_URL=http://localhost:3000

# Storage bucket name for blog media uploads (REQUIRED for blog CMS)
# This bucket must be created in Supabase Storage or configured on your VPS
# Default: blog-media (make this bucket public for blog images)
BLOG_MEDIA_BUCKET=blog-media
